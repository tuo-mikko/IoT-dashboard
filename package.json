{
    "name": "iot-vertical-farm",
    "private": true,
    "workspaces": [
        "packages/backend",
        "packages/frontend"
    ],
    "scripts": {
        "dev": "concurrently \"npm:serve-back\" \"npm:serve-front\"",
        "serve-back": "npm --prefix packages/backend run dev",
        "serve-front": "npm --prefix packages/frontend start",
        "heroku-postbuild": "npm --prefix packages/frontend install && npm --prefix packages/frontend run build"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}
